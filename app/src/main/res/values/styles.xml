<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="textInputStyle">@style/AppInputStyle</item>
        <item name="tabStyle">@style/AppTabStyle</item>

        <!-- Custom Title -->
        <item name="textAppearanceHeadline6">@style/AppTextAppearanceH6</item>
    </style>

    <style name="AppTextAppearanceH6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTabStyle" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/tab_color</item>
    </style>

    <style name="AppButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">2dp</item>
        <item name="backgroundTint">?colorPrimary</item>
    </style>

    <style name="AppInputStyle" parent="@style/Widget.Design.TextInputLayout">
        <item name="hintTextColor">@color/colorGray</item>
    </style>
</resources>
